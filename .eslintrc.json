{
	"parserOptions": {
		"ecmaVersion": 6
	},
	"rules": {
		"indent": [
			"warn",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"semi": [
			"error",
			"always"
		],
		"quotes": [
			"error",
			"single",
			{
				"avoidEscape": true,
				"allowTemplateLiterals": true
			}
		],
		"brace-style": [
			"error",
			"1tbs"
		],
		"curly": [
			"error",
			"all"
		],
		"yoda": [
			"error",
			"never"
		],
		"comma-style": [
			"error",
			"last"
		],
		"comma-spacing": [
			"error",
			{
				"before": false,
				"after": true
			}
		],
		"comma-dangle": [
			"error",
			"never"
		],
		"dot-location": [
			"error",
			"property"
		],
		"no-eval": "error",
		"no-unused-vars": [
			"warn",
			{
				"args": "all"
			}
		],
		"no-console": "off",
		"no-debugger": "off",
		"no-global-assign": "warn",
		"no-new-wrappers": "error",
		"no-array-constructor": "error",
		"no-new-object": "error",
		"keyword-spacing": "error",
		"operator-assignment": [
			"warn",
			"always"
		],
		"space-before-function-paren": [
			"warn",
			"always"
		],
		"space-infix-ops": [
			"error",
			{
				"int32Hint": false
			}
		],
		"func-name-matching": "warn",
		"wrap-iife": [
			"warn",
			"inside"
		],
		"no-var": "warn",
		"arrow-body-style": [
			"warn",
			"as-needed",
			{
				"requireReturnForObjectLiteral": true
			}
		],
		"arrow-parens": [
			"warn",
			"as-needed"
		],
		"arrow-spacing": "error",
		"object-shorthand": [
			"warn",
			"always",
			{
				"avoidQuotes": true
			}
		],
		"prefer-template": "warn"
	},
	"env": {
		"browser": true,
		"node": true,
		"es6": true
	},
	"extends": "eslint:recommended"
}
